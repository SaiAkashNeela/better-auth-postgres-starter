# Server Configuration
API_BASE=/api/v1
PORT=5001
NODE_ENV=development
EMAIL_HOST=localhost
EMAIL_PORT=1025
# Better Auth Configuration
# Use a strong, random 32-character secret in production
BETTER_AUTH_SECRET=v9e0f6_very_secret_key_32_chars_long_12345
BETTER_AUTH_URL=http://localhost:5001/api/auth
APP_URL=http://localhost:3000

# Social Login Providers
# Replace with real credentials from GitHub/Google developer consoles
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Database
# Using the credentials provided: admin:password
# Fallback to postgres if admin fails
DATABASE_URL=postgresql://admin:pass@127.0.0.1:5432/better_api

# Email (Required for Magic Link and Reset flows)
EMAILIT_API_KEY=your_emailit_api_key
EMAILIT_API_URL=https://api.emailit.com/v1/emails
FROM_EMAIL=noreply@example.com
FROM_NAME=Better Auth