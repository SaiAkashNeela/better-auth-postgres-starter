{
  "name": "better-auth-postgres-starter",
  "version": "1.0.0",
  "description": "A high-performance API template using Bun, Hono, and Better Auth",
  "author": "Sai Akash Neela <saiakashneela@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProMehedi/better-api"
  },
  "scripts": {
    "start": "NODE_ENV=production bun run server.ts",
    "dev": "bun run --hot server.ts",
    "format": "bunx prettier --write '**/*.{js,jsx,ts,tsx}'",
    "format:check": "bunx prettier --check '**/*.{js,jsx,ts,tsx}'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^6.19.2",
    "@prisma/client": "^6.19.2",
    "axios": "^1.13.4",
    "better-auth": "^1.4.18",
    "dotenv": "^16.6.1",
    "hono": "^4.11.7",
    "nodemailer": "^7.0.13",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.2.0",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.16.0",
    "prisma": "^6.19.2",
    "tsx": "^4.21.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "bun",
    "hono",
    "better-auth",
    "typescript",
    "api",
    "rest",
    "template"
  ]
}